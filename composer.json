{
	"name": "sitepark/composer-project",
	"type": "composer-plugin",
	"description": "Tools to manage composer projects",
	"license": "MIT",
	"keywords": ["comoser", "plugin", "project-workflow", "release-process"],
	"homepage": "https://github.com/sitepark/composer-project/",
	"support": {
		"source": "https://github.com/sitepark/composer-project/"
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"composer-plugin-api": "^2.0",
		"php": ">=8.0 <8.3",
		"ext-json": "*",
	 	"symfony/console": "^6.0"
	},
	"autoload": {
		"psr-4": {
			"SP\\Composer\\Project\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"SP\\Composer\\Project\\": "tests"
		}
	},
	"extra": {
		"class": "SP\\Composer\\Project\\Plugin\\Plugin",
		"branch-alias": {
			"dev-main": "1.x-dev"
		}
	},
	"scripts": {
		"post-install-cmd": "phive --no-progress install --trust-gpg-keys C00543248C87FB13,4AA394086372C20A,51C67305FFC2E5C0,661E97400F658E25,31C7E470E2138192",
		"post-autoload-dump": "if [ -f \"bin/captainhook\" ]; then bin/captainhook install -f; fi",
		"analyse": [
			"@analyse:phplint",
			"@analyse:phpstan",
			"@analyse:phpcs",
			"composer audit"
		],
		"analyse:phpcs": "tools/phpcs",
		"analyse:phplint": "tools/phplint",
		"analyse:phpstan": "tools/phpstan analyse",
		"cs-fix": [
			"@cs-fix:phpcbf"
		],
		"cs-fix:phpcbf": "tools/phpcbf",
		"test-coverage": [
			"@test:phpunit-coverage"
		],
		"test:phpunit-coverage": "tools/phpunit.phar -c phpunit.xml"
	},
	"require-dev": {
		"composer/composer": "^2.5"
	}
}
