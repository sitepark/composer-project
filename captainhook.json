{
	"commit-msg": {
		"enabled": true,
		"actions": []
	},
	"pre-push": {
		"enabled": false,
		"actions": []
	},
	"pre-commit": {
		"enabled": true,
		"actions": [
			{
				"action": "vendor/bin/phplint",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
						"args": [
							"php"
						]
					}
				]
			},
			{
				"action": "bin/phpunit -c ./phpunit.xml --no-coverage",
				"options": [],
				"conditions": [
					{
						"exec": "and",
						"args": [
							{
								"exec": "\\CaptainHook\\App\\Hook\\Condition\\OnBranch",
								"args": [
									"develop"
								]
							},
							{
								"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
								"args": [
									"php", "composer.json", "composer.lock"
								]
							}
						]
					}
				]
			},
			{
				"action": "vendor/bin/phpcs --runtime-set ignore_errors_on_exit 0 --filter=GitStaged",
				"options": [],
				"conditions": [
					{
						"exec": "and",
						"args": [
							{
								"exec": "\\CaptainHook\\App\\Hook\\Condition\\OnBranch",
								"args": [
									"develop"
								]
							},
							{
								"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
								"args": [
									"php"
								]
							}
						]
					}
				]
			},
			{
				"action": "bin/phpstan --no-progress --no-ansi --no-interaction",
				"options": [],
				"conditions": [
					{
						"exec": "and",
						"args": [
							{
								"exec": "\\CaptainHook\\App\\Hook\\Condition\\OnBranch",
								"args": [
									"develop"
								]
							},
							{
								"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
								"args": [
									"php"
								]
							}
						]
					}
				]
			}
		]
	},
	"prepare-commit-msg": {
		"enabled": false,
		"actions": []
	}
}
